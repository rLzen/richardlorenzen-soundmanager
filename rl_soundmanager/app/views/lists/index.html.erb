<p id="notice"><%= notice %></p>

<h1>Music Collection List</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Artist name</th>
      <th>Album name</th>
      <th>Song name</th>
      <th>Format</th>
      <th>Length</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.artist_name %></td>
        <td><%= list.album_name %></td>
        <td><%= list.song_name %></td>
        <td><%= list.format %></td>
        <td><%= list.length.strftime('%R') %></td>
        <td><%= list.size %></td>
        <td><%= link_to 'Show', list, class:"btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_list_path(list), class:"btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class:"btn btn-success" %>
<%= link_to 'Back', current_user, class:"btn btn-danger" %>

