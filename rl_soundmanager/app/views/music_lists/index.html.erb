<p id="notice"><%= notice %></p>

<h1>Music List</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Song</th>
      <th>Format</th>
      <th>Length</th>
      <th>Size</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @music_lists.each do |music_list| %>
      <tr>
        <td><%= music_list.name %></td>
        <td><%= music_list.artist %></td>
        <td><%= music_list.album %></td>
        <td><%= music_list.song %></td>
        <td><%= music_list.format %></td>
        <td><%= music_list.length.strftime('%R') %></td>
        <td><%= music_list.size %></td>
        <td><%= music_list.user_id %></td>
        <td><%= link_to 'Destroy', music_list, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-xs"  %></td>
    <% end %>
  </tbody>
</table>

<br>
<br>
<%= link_to 'New List', new_music_list_path, class:"btn btn-success" %>
<%= link_to 'Back', current_user, class:"btn btn-success" %>

